{
    "name": "brandembassy/components",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BrandEmbassy\\Components\\": "src-php"
        }
    },
    "require": {
        "php": "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "archive": {
        "directory": "dist",
        "format": "zip",
        "skip-dev": true,
        "exclude": [
            ".storybook",
            "config",
            "public",
            "scripts",
            "src",
            "stories",
            ".flowconfig",
            ".gitignore",
            ".jsbeautifyrc",
            "Jenkinsfile",
            "package.json",
            "yarn.lock"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit src-php"
    }
}
