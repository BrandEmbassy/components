{
    "name": "brandembassy/ui-components",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BrandEmbassy\\Components\\": "src-php"
        }
    },
    "require": {
        "php": "~7.2",
        "marc-mabe/php-enum": "^3.0",
        "beberlei/assert": "^3.0",
        "psr/http-message": "^1.0",
        "zendframework/zend-escaper": "^2.6"
    },
    "require-dev": {
        "brandembassy/coding-standard": "^5.2",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^8",
        "roave/security-advisories": "dev-master",
        "guzzlehttp/psr7": "^1.4"
    },
    "archive": {
        "directory": "dist",
        "format": "zip",
        "skip-dev": true,
        "exclude": [
            ".storybook",
            "config",
            "public",
            "scripts",
            "src",
            "stories",
            ".flowconfig",
            ".gitignore",
            ".jsbeautifyrc",
            "Jenkinsfile",
            "package.json",
            "yarn.lock"
        ]
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs --standard=BrandEmbassyCodingStandard src-php",
        "phpcbf": "./vendor/bin/phpcbf --standard=BrandEmbassyCodingStandard src-php",
        "phpstan": "./vendor/bin/phpstan analyse src-php",
        "test": "./vendor/bin/phpunit src-php"
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 600
    }
}
